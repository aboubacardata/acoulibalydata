:root {
    --bg-color: #0f172a;
    --card-bg: #1e293b;
    --accent: #38bdf8;
    --accent-dim: rgba(56, 189, 248, 0.1);
    --text-main: #f1f5f9;
    --text-muted: #94a3b8;
    --border: #334155;
    --success: #4ade80;
    --string: #a5d6ff;
    --keyword: #ff7b72;
    --comment: #8b949e;
    --btn-hover: #238636;
    --git-green: #22c55e;
    --git-red: #ef4444;
    --git-purple: #a855f7;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Cascadia Code', 'Fira Code', Consolas, 'Courier New', monospace;
    background-color: var(--bg-color);
    color: var(--text-main);
    line-height: 1.6;
    min-height: 100vh;
}

body::before {
    content: "";
    position: fixed;
    inset: 0;
    background-image:
        linear-gradient(var(--border) 1px, transparent 1px),
        linear-gradient(90deg, var(--border) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.08;
    z-index: -1;
}

.page-resume::before {
    display: none;
}

a {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.2s ease;
}

a:hover,
button:hover {
    color: var(--text-main);
}

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 50px;
    border-bottom: 1px solid var(--border);
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(5px);
    position: sticky;
    top: 0;
    z-index: 100;
}

.logo {
    font-weight: bold;
    font-size: 1.2rem;
    color: var(--accent);
}

.nav-links {
    display: flex;
    gap: 30px;
}

.nav-link {
    color: var(--text-muted);
    font-size: 0.9rem;
    transition: color 0.3s ease;
}

.nav-link--active,
.nav-link:hover {
    color: var(--accent);
}

.return-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-weight: bold;
    margin: 20px 0;
}

.return-wrapper {
    max-width: 900px;
    margin: 0 auto 20px auto;
}

.hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    text-align: center;
    position: relative;
    padding: 40px 20px;
}

.network-graph {
    position: relative;
    width: 650px;
    height: 450px;
    margin: 0 auto 40px auto;
}

.node {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-weight: bold;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: default;
    z-index: 10;
    background: var(--card-bg);
    border: 1px solid var(--border);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

.node:hover {
    transform: scale(1.05);
    z-index: 20;
    border-color: var(--accent);
}

.center-node {
    width: 130px;
    height: 130px;
    border-radius: 50%;
    background: var(--accent);
    color: var(--bg-color);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    flex-direction: column;
    font-size: 1rem;
    cursor: pointer;
    border: 3px solid rgba(255, 255, 255, 0.2);
}

.center-node:hover {
    transform: translate(-50%, -50%) scale(1.05);
}

.click-hint {
    font-size: 0.55rem;
    margin-top: 5px;
    opacity: 0.8;
    font-weight: normal;
}

.primary-node {
    width: 120px;
    padding: 8px;
    border-radius: 8px;
    font-size: 0.8rem;
    line-height: 1.3;
    color: var(--text-main);
    border-color: var(--accent);
}

.p-scripting {
    top: 12%;
    left: 12%;
}

.p-bi {
    top: 12%;
    right: 12%;
}

.p-data {
    bottom: 12%;
    left: 50%;
    transform: translateX(-50%);
}

.p-data:hover {
    transform: translateX(-50%) scale(1.05);
}

.outer-node {
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.7rem;
    color: var(--text-muted);
    border-style: dashed;
    background: transparent;
}

.outer-node:hover {
    background: var(--card-bg);
    color: var(--accent);
    border-style: solid;
}

.o-lending {
    top: 38%;
    left: -5px;
}

.o-risk {
    top: 62%;
    left: -5px;
}

.o-ecomm {
    top: 38%;
    right: -5px;
}

.o-plg {
    top: 62%;
    right: -5px;
}

.o-ab {
    bottom: 5%;
    right: 12%;
}

.line {
    position: absolute;
    background: var(--border);
    height: 2px;
    z-index: 1;
    transform-origin: 0 0;
}

.link-1 {
    width: 130px;
    top: 50%;
    left: 50%;
    transform: rotate(225deg);
}

.link-2 {
    width: 130px;
    top: 50%;
    left: 50%;
    transform: rotate(-45deg);
}

.link-3 {
    width: 105px;
    top: 50%;
    left: 50%;
    transform: rotate(90deg);
}

.profile-tooltip {
    display: none;
    position: absolute;
    top: 110%;
    left: 50%;
    transform: translateX(-50%);
    width: 280px;
    background: #fff;
    color: #333;
    border-radius: 8px;
    padding: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    text-align: left;
    cursor: default;
    z-index: 100;
}

.profile-tooltip.active {
    display: block;
    animation: fadeIn 0.2s ease-out;
}

.profile-tooltip::before {
    content: "";
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    border-width: 0 8px 8px 8px;
    border-style: solid;
    border-color: transparent transparent #fff transparent;
}

.tooltip-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    font-size: 0.9rem;
}

.close-btn {
    cursor: pointer;
    font-weight: bold;
    color: #999;
    padding: 0 5px;
}

.close-btn:hover {
    color: #000;
}

.tooltip-body p {
    font-size: 0.8rem;
    margin-bottom: 8px;
    line-height: 1.4;
}

.tooltip-body hr {
    border: 0;
    border-top: 1px solid #eee;
    margin: 10px 0;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateX(-50%) translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
    }
}

.value-prop {
    max-width: 700px;
    padding: 0 20px;
}

.value-prop h1 {
    font-size: 2rem;
    margin-bottom: 15px;
}

.value-prop p {
    color: var(--text-muted);
    font-size: 1.1rem;
}

.highlight {
    color: var(--accent);
}

.kpi-section {
    background: var(--card-bg);
    border-top: 1px solid var(--border);
    padding: 40px 20px;
}

.kpi-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 10px;
    text-align: center;
}

.kpi-card {
    padding: 20px;
    border-right: 1px solid var(--border);
}

.kpi-card:last-child {
    border-right: none;
}

.kpi-number {
    display: block;
    font-size: 2rem;
    font-weight: bold;
    color: var(--accent);
    margin-bottom: 5px;
}

.kpi-label {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.page-projects .layout-container {
    display: flex;
    min-height: 100vh;
}

.page-projects .sidebar {
    width: 280px;
    background: rgba(15, 23, 42, 0.95);
    border-right: 1px solid var(--border);
    padding: 30px 20px;
    position: fixed;
    inset: 0 auto 0 0;
    overflow-y: auto;
}

.page-projects .sidebar h3 {
    font-size: 0.9rem;
    color: var(--accent);
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-bottom: 1px solid var(--border);
    padding-bottom: 10px;
}

.filter-group {
    margin-bottom: 40px;
}

.filter-row {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
    cursor: pointer;
    transition: opacity 0.2s ease;
    opacity: 0.7;
}

.filter-row:hover,
.filter-row.active {
    opacity: 1;
}

.filter-label {
    width: 80px;
    font-size: 0.8rem;
    color: var(--text-muted);
}

.filter-bar-bg {
    flex: 1;
    height: 8px;
    background: var(--border);
    border-radius: 4px;
    overflow: hidden;
    margin-left: 10px;
}

.filter-bar-fill {
    height: 100%;
    background: var(--text-muted);
    transition: width 0.5s ease, background 0.2s ease;
}

.filter-row.active .filter-bar-fill {
    background: var(--accent);
}

.filter-row.active .filter-label {
    color: var(--accent);
    font-weight: bold;
}

.progress-40 {
    width: 40%;
}

.progress-50 {
    width: 50%;
}

.progress-60 {
    width: 60%;
}

.progress-70 {
    width: 70%;
}

.progress-80 {
    width: 80%;
}

.page-projects .main-content {
    margin-left: 280px;
    flex: 1;
    padding: 40px;
}

.toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    border-bottom: 1px solid var(--border);
    padding-bottom: 20px;
}

.query-display {
    font-size: 1.2rem;
    color: var(--success);
}

.blink {
    animation: blink 1s step-end infinite;
}

@keyframes blink {
    50% {
        opacity: 0;
    }
}

.view-toggle {
    display: flex;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 4px;
    overflow: hidden;
}

.toggle-btn {
    padding: 8px 16px;
    cursor: pointer;
    font-size: 0.8rem;
    border: none;
    background: transparent;
    color: var(--text-muted);
    transition: 0.3s;
}

.toggle-btn.active {
    background: var(--accent);
    color: var(--bg-color);
    font-weight: bold;
}

.project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
}

.project-card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    padding: 25px;
    position: relative;
    transition: transform 0.2s, box-shadow 0.2s, border-color 0.2s;
    display: flex;
    flex-direction: column;
    min-height: 250px;
}

.project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.5);
    border-color: var(--accent);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 15px;
}

.folder-icon {
    font-size: 1.5rem;
    color: var(--accent);
}

.project-id {
    font-size: 0.7rem;
    color: var(--border);
}

.project-title {
    font-size: 1.1rem;
    font-weight: bold;
    margin-bottom: 10px;
    color: var(--text-main);
}

.desc-box {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 20px;
    flex-grow: 1;
    min-height: 60px;
}

.tech-view {
    display: none;
    color: var(--accent);
}

.biz-view {
    display: block;
}

.tag-row {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: auto;
}

.tag {
    font-size: 0.7rem;
    padding: 4px 8px;
    border: 1px solid var(--border);
    color: var(--text-muted);
    border-radius: 2px;
}

.tag.highlight {
    border-color: var(--accent);
    color: var(--accent);
}

.page-resume {
    padding: 40px 20px;
}

.resume-shell {
    max-width: 900px;
    margin: 0 auto;
    border: 1px solid var(--border);
    background: #0d1117;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    position: relative;
}

.window-header {
    background: #161b22;
    padding: 10px 20px;
    border-bottom: 1px solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.window-title {
    font-size: 0.9rem;
    color: var(--text-main);
    font-weight: bold;
}

.window-controls {
    display: flex;
    gap: 8px;
}

.dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.red {
    background: #ff5f56;
}

.yellow {
    background: #ffbd2e;
}

.green {
    background: #27c93f;
}

.code-body {
    padding: 40px;
    overflow-x: auto;
}

.line {
    display: block;
    margin-bottom: 5px;
}

.indent-1 {
    margin-left: 20px;
}

.indent-2 {
    margin-left: 40px;
}

.key {
    color: var(--keyword);
}

.val {
    color: var(--string);
}

.obj-key {
    color: var(--accent);
}

.bracket {
    color: #ffd700;
}

.exp-block {
    margin-bottom: 20px;
    border-left: 1px dashed var(--border);
    padding-left: 15px;
    margin-left: 20px;
}

.reviews-container {
    margin-top: 40px;
    border-top: 1px solid var(--border);
    padding-top: 20px;
}

.run-btn {
    background: transparent;
    border: 1px solid var(--accent);
    color: var(--accent);
    padding: 10px 20px;
    font-family: inherit;
    cursor: pointer;
    font-weight: bold;
    transition: 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 10px;
}

.run-btn:hover {
    background: rgba(56, 189, 248, 0.1);
    box-shadow: 0 0 15px rgba(56, 189, 248, 0.2);
}

.console-output {
    background: #000;
    padding: 20px;
    margin-top: 20px;
    border-radius: 4px;
    border: 1px solid #333;
    display: none;
    font-size: 0.9rem;
}


.timeline {
    position: relative;
    border-left: 2px solid var(--border);
    padding-left: 30px;
}

.timeline .log-entry {
    position: relative;
    margin-bottom: 60px;
}

.timeline .log-entry::before {
    content: "";
    position: absolute;
    left: -36px;
    top: 5px;
    width: 10px;
    height: 10px;
    background: var(--bg-color);
    border: 2px solid var(--accent);
    border-radius: 50%;
    z-index: 1;
    transition: background 0.2s ease, box-shadow 0.2s ease;
}

.timeline .log-entry:hover::before {
    background: var(--accent);
    box-shadow: 0 0 10px var(--accent);
}

.entry-header {
    margin-bottom: 10px;
}

.commit-hash {
    color: var(--text-muted);
    font-size: 0.8rem;
    margin-right: 10px;
}

.entry-title {
    font-size: 1.4rem;
    font-weight: bold;
    color: var(--text-main);
    display: inline-block;
    margin-bottom: 5px;
}

.entry-title:hover {
    color: var(--accent);
    text-decoration: underline;
}

.entry-meta {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-bottom: 15px;
    display: flex;
    gap: 15px;
}

.entry-excerpt {
    background: var(--card-bg);
    padding: 20px;
    border-radius: 4px;
    border: 1px solid var(--border);
}

.code-block {
    background: #111;
    padding: 10px;
    border-radius: 4px;
    font-family: inherit;
    font-size: 0.85rem;
    margin-top: 15px;
    border-left: 3px solid var(--accent);
    overflow-x: auto;
}

.kw {
    color: #c678dd;
}

.str {
    color: #98c379;
}

.func {
    color: #61afef;
}

.badge {
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: bold;
    text-transform: uppercase;
}

.badge-feat {
    background: rgba(34, 197, 94, 0.1);
    color: var(--git-green);
    border: 1px solid var(--git-green);
}

.badge-fix {
    background: rgba(239, 68, 68, 0.1);
    color: var(--git-red);
    border: 1px solid var(--git-red);
}

.badge-exp {
    background: rgba(168, 85, 247, 0.1);
    color: var(--git-purple);
    border: 1px solid var(--git-purple);
}

.sidebar {
    position: sticky;
    top: 40px;
    height: fit-content;
}

.readme-card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    padding: 20px;
    border-radius: 4px;
}

.readme-header {
    font-weight: bold;
    border-bottom: 1px solid var(--border);
    padding-bottom: 10px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.readme-header--compact {
    margin-top: 20px;
    font-size: 0.8rem;
}

.readme-description {
    font-size: 0.85rem;
    margin-bottom: 15px;
    color: #ccc;
}

.readme-list {
    list-style: none;
}

.readme-list li {
    margin-bottom: 10px;
    font-size: 0.9rem;
    color: var(--text-muted);
}

.readme-list li::before {
    top: 20px;
    right: 20px;
    z-index: 1000;
    width: 40px;
    height: 40px;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 4px;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.hamburger-btn:hover {
    border-color: var(--accent);
    background: rgba(56, 189, 248, 0.1);
}

.hamburger-line {
    width: 24px;
    height: 2px;
    background: var(--accent);
    transition: all 0.3s ease;
}

.sidebar-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    z-index: 998;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.sidebar-overlay.active {
    opacity: 1;
}

/* Mobile Styles (max-width: 800px) */
@media (max-width: 800px) {

    /* ===== NAVIGATION ===== */
    nav {
        padding: 12px 20px;
        flex-direction: row;
        justify-content: space-between;
    }

    .logo {
        font-size: 1rem;
    }

    .nav-links {
        gap: 15px;
        font-size: 0.75rem;
    }

    .nav-link {
        font-size: 0.75rem;
    }

    /* ===== INDEX.HTML - HERO SECTION ===== */
    .hero-container {
        min-height: auto;
        padding: 20px 15px;
    }

    /* Network Graph - Scaled Down */
    .network-graph {
        width: 100%;
        max-width: 350px;
        height: 280px;
        margin: 0 auto 20px auto;
        transform: scale(0.85);
    }

    .center-node {
        width: 90px;
        height: 90px;
        font-size: 0.75rem;
    }

    .center-name {
        font-size: 0.7rem;
    }

    .click-hint {
        font-size: 0.45rem;
    }

    .primary-node {
        width: 85px;
        padding: 6px;
        font-size: 0.6rem;
        line-height: 1.2;
    }

    .outer-node {
        padding: 4px 8px;
        font-size: 0.55rem;
    }

    .line {
        height: 1px;
    }

    .link-1,
    .link-2 {
        width: 90px;
    }

    .link-3 {
        width: 75px;
    }

    /* Value Prop - Reduced Fonts */
    .value-prop {
        max-width: 100%;
        padding: 0 15px;
    }

    .value-prop h1 {
        font-size: 1.3rem;
        margin-bottom: 10px;
        line-height: 1.3;
    }

    .value-prop p {
        font-size: 0.8rem;
        line-height: 1.4;
    }

    /* Profile Tooltip */
    .profile-tooltip {
        width: 220px;
        padding: 10px;
        font-size: 0.7rem;
    }

    .tooltip-header {
        font-size: 0.75rem;
    }

    .tooltip-body p {
        font-size: 0.65rem;
    }

    /* ===== INDEX.HTML - KPI SECTION ===== */
    .kpi-section {
        padding: 20px 10px;
    }

    .kpi-grid {
        grid-template-columns: repeat(5, 1fr);
        gap: 5px;
        max-width: 100%;
    }

    .kpi-card {
        padding: 10px 5px;
        border-right: 1px solid var(--border);
    }

    .kpi-card:last-child {
        border-right: none;
    }

    .kpi-number {
        font-size: 1rem;
        margin-bottom: 3px;
    }

    .kpi-label {
        font-size: 0.5rem;
        letter-spacing: 0.5px;
        line-height: 1.2;
    }

    /* ===== PROJECTS.HTML - SIDEBAR & LAYOUT ===== */
    .hamburger-btn {
        display: flex;
    }

    .sidebar-overlay {
        display: block;
    }

    .page-projects .sidebar,
    .page-blogs .sidebar {
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        z-index: 999;
        width: 280px;
    }

    .page-projects .sidebar.active,
    .page-blogs .sidebar.active {
        transform: translateX(0);
    }

    .page-projects .main-content {
        margin-left: 0;
        padding: 20px 15px;
    }

    .toolbar {
        flex-direction: column;
        gap: 15px;
        align-items: flex-start;
    }

    .query-display {
        font-size: 0.9rem;
        word-break: break-word;
    }

    .view-toggle {
        width: 100%;
    }

    .toggle-btn {
        flex: 1;
        font-size: 0.75rem;
        padding: 8px 12px;
    }

    /* Project Grid - 1 Column on Mobile */
    .project-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .project-card {
        padding: 20px;
        min-height: auto;
    }

    .project-title {
        font-size: 1rem;
    }

    .desc-box {
        font-size: 0.85rem;
        min-height: auto;
    }

    .tag {
        font-size: 0.65rem;
        padding: 3px 6px;
    }

    /* ===== BLOGS.HTML - LAYOUT ===== */
    .page-blogs .container {
        display: block;
        padding: 20px 15px;
    }

    .page-blogs .sidebar {
        position: fixed;
        inset: 0 auto 0 0;
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        z-index: 999;
        background: rgba(15, 23, 42, 0.98);
        backdrop-filter: blur(10px);
        overflow-y: auto;
        width: 280px;
    }

    .page-blogs .sidebar.active {
        transform: translateX(0);
    }

    .nav-crumb {
        font-size: 0.75rem;
        margin-bottom: 20px;
    }

    .return-link {
        font-size: 0.85rem;
    }

    .timeline {
        padding-left: 20px;
    }

    .entry-title {
        font-size: 1.1rem;
    }

    .entry-meta {
        font-size: 0.7rem;
        flex-direction: column;
        gap: 5px;
    }

    .entry-excerpt {
        padding: 15px;
    }

    .code-block {
        font-size: 0.7rem;
        padding: 8px;
    }

    .readme-card {
        padding: 15px;
    }

    .readme-header {
        font-size: 0.85rem;
    }

    .readme-description {
        font-size: 0.75rem;
    }

    .readme-list li {
        font-size: 0.8rem;
    }

    /* Footer */
    footer {
        font-size: 0.75rem;
        padding: 1.5rem 0 !important;
    }
}

/* Extra Small Devices (max-width: 480px) */
@media (max-width: 480px) {

    /* Further reduce network graph */
    .network-graph {
        max-width: 300px;
        height: 240px;
        transform: scale(0.75);
    }

    /* Value Prop */
    .value-prop h1 {
        font-size: 1.1rem;
    }

    .value-prop p {
        font-size: 0.75rem;
    }

    /* KPI Cards - Even Smaller */
    .kpi-number {
        font-size: 0.85rem;
    }

    .kpi-label {
        font-size: 0.45rem;
    }

    .kpi-card {
        padding: 8px 3px;
    }

    /* Navigation */
    .logo {
        font-size: 0.9rem;
    }

    .nav-links {
        gap: 10px;
    }

    .nav-link {
        font-size: 0.7rem;
    }
}